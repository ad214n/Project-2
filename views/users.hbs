<h1>Join Our Community!</h1>
<a class="btn btn-outline-info" href="/" role="button">Go Back</a>


<form action="/users/new" method="post">
    <div>
        <label class='text' for="name">Full Name:</label>
        <input type="text" id="name" name="userName">
    </div>
    <div>
        <label class='text' for="age">Age:</label>
        <input type="number" id="age" name="userAge">
    </div>
    <div>
        <label class='text' for="weight">Weight(lbs):</label>
        <input type="number" id="weight" name="userWeight">
    </div>
    <div>
        <label class='text' for="height">Height(cm):</label>
        <input type="number" id="height" name="userHeight">
    </div>
    <div>
        <label class='text' for="msg">Goals:</label>
        <textarea id="msg" name="userGoals"></textarea>
    </div>
    <br>
    <input type="submit" value="Create Account">
</form>

<h2>All Users</h2>
<ul>
    {{#each allUsers}}
        {{> user}}
    {{/each}}
</ul>